<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background circle you control -->
    <item>
        <shape android:shape="rectangle">
            <size android:width="126dp" android:height="126dp"/>
            <solid android:color="@color/splash_background"/>
            <stroke android:width="1dp" android:color="#000000"/>
        </shape>
    </item>

    <!-- Your logo, padded inside the circle -->
    <item
        android:drawable="@drawable/ad_splashlogo"
        android:insetLeft="30dp"
        android:insetTop="30dp"
        android:insetRight="30dp"
        android:insetBottom="30dp"/>
</layer-list>
